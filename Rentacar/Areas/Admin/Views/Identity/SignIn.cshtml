@model Rentacar.Areas.Admin.ViewModels.SignInViewModel

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="py-4 my-4">
    <div asp-validation-for="All" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-body px-lg-5 pt-4">
                    <form asp-action="SignIn" method="post">
                        <h3 class="col-12 text-success text-center py-4" style="font-weight:bold ">Inloggen</h3>
                 
                        <br/>
                        
                        <div class="py-2">
                            <input asp-for="Email" type="email" placeholder="Email" class="form-control"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            <input asp-for="PasswordHash" type="password" placeholder="Wachtwoord" class="form-control"/>
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="py-4">
                            <input type="submit" value="Inloggen" class="btn btn-primary form-control"/>
                        </div>
                        
                        <br/>
                        <br/>
                        <a asp-action="SignUp"
                           class="btn btn-primary text-white">
                            <i class="fas fa-user-plus"></i> Registreer een niewe account
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

