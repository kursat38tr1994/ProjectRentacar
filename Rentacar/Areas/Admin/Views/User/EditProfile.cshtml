@model Rentacar.Areas.Admin.ViewModels.UserViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<br/>
<h1>Gebruikers Wijzigen</h1>
<br/>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" disabled class="form-control">
    
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Phonenumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Phonenumber" class="form-control">
            <span asp-validation-for="Phonenumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Firstname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Firstname" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Surname" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Residence" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Residence" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Postalcode" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Postalcode" class="form-control">
        </div>
    </div>
    <div class="form-group row">
            <label asp-for="Housenumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Housenumber" class="form-control">
            </div>
        </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Bewerken</button>
            <a asp-action="Index" class="btn btn-primary">Annuleren</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Gebruiker Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">Geen role op dit moment</h5>
            }
        </div>
        <div class="card-footer">
            <a href="#" style="width:auto" class="btn btn-primary">
                Beheer Roles
            </a>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h3>Gebruiker Claims</h3>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
            else
            {
                <h5 class="card-title">Geen Claim op dit moment</h5>
            }
        </div>
        <div class="card-footer">
            <a href="#" style="width:auto" class="btn btn-primary">
                Beheer Claims
            </a>
        </div>
    </div>
</form>
<br/>
<br/>