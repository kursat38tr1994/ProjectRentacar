@model IEnumerable<Rentacar.Areas.Customer.ViewModels.CarViewModel>


<div class="row pb-3 backgroundWhite">
    @foreach(var car in Model){
    <div class="col-lg-3 col-md-6">
        <div class="row p-2">
            <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                <div class="card" style="border:0px;">
                    <img src="https://via.placeholder.com/150" class="card-img-top rounded"/>
                    <div class="pl-1">
                        <p class="card-title h5"><b style="color:#2c3e50">Title</b></p>
                    </div>
                    
                    <div style="padding-left:5px;">
                        <p style="color:maroon">Prijs: <b class="">@car.CurrentPrice</b></p>
                    </div>
                </div>
                <div >
                    <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@car.Id">Details</a>
                </div>
            </div>
        </div>
    </div>
    }
</div>