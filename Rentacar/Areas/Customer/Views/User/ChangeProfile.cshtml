@model Rentacar.Areas.Customer.ViewModels.UserViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>User Details</h2>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    @* <div class="form-group row"> *@
    @*     <label asp-for="Email" class="col-sm-2 col-form-label"></label> *@
    @*     <div class="col-sm-10"> *@
    @*         <input asp-for="Email" class="form-control"> *@
    @*         <span asp-validation-for="Email" class="text-danger"></span> *@
    @*     </div> *@
    @* </div> *@
    <div class="form-group row">
        <label asp-for="Phonenumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Phonenumber" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Firstname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Firstname" class="form-control">
            @* <span asp-validation-for="Firstname" class="text-danger"></span> *@
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Surname" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Residence" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Residence" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Postalcode" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Postalcode" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Housenumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Housenumber" class="form-control">
        </div>
    </div>


    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
<br/>
  
</form>
