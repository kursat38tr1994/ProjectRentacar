@model IEnumerable<User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="border backgroundWhite">
    <div class="row">
        <h2 class="text-info">Gebruikers</h2>
    </div>
    <div class="col-9 text-sm-right" style="margin-left: 60%;">
        <div class="col-6 text-right">
            <a asp-area="Admin" asp-controller="Identity" asp-action="SignUp" class="btn btn-primary" style="margin-top: -70px;"><i class="fas fa-plus"></i> &nbsp; Maak nieuwe gebruiker</a>
        </div>
    </div>

    <br/>
    @if (Model.Any())
    {
        <table class="table table-striped border">
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(m => m.Id);
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Email);
                </th>
                <th>
                    
                </th>
                @* <th> *@
                @*     @Html.DisplayNameFor(m => m.Email); *@
                @* </th> *@
