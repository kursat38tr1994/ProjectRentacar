                @* </th> *@
                @* <th> *@
                @*     @Html.DisplayNameFor(m => m.LockoutEnabled); *@
                @* </th> *@
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(m => item.PhoneNumber)
                    </td>
                    <td>
                        <form asp-action="DeleteProfile" asp-route-id="@item.Id" method="post">
                        <a asp-area="Admin" asp-controller="User" asp-action="EditProfile" asp-route-id="@item.Id" class="btn btn-primary" style="width: 35%"> Wijzigen </a>
                        <button class="btn btn-primary"  style="width: 50%;"> Verwijderen </button>
                        </form>
                    </td>
